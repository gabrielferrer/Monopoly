<ui:View
    x:Class="Monopoly.UI.NewGameWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Monopoly.UI"
    xmlns:vm="clr-namespace:Monopoly.VM"
    Title="New Game"
    Width="300"
    Height="150"
    x:TypeArguments="vm:NewGameWindowViewModel"
    ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/Monopoly;component/UI/NewGameWindowStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource TitleStyle}"
            Text="Players (2-8)" />
        <TextBox
            Grid.Column="1"
            Style="{StaticResource BoxStyle}"
            Text="{Binding Players}" />
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    Width="10" />
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    Width="10" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="10" />
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="10" />
            </Grid.RowDefinitions>
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Command="{Binding AcceptCommand}"
                Content="Accept"
                Style="{StaticResource ButtonStyle}" />
            <Button
                Grid.Row="1"
                Grid.Column="3"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                Style="{StaticResource ButtonStyle}" />
        </Grid>
    </Grid>
</ui:View>
