<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        x:Key="ButtonStyle"
        TargetType="{x:Type Button}">
        <Setter
            Property="Width"
            Value="100" />
        <Setter
            Property="Height"
            Value="32" />
    </Style>

    <DataTemplate
        x:Key="ServerTemplate">
        <TextBlock>
            <Run
                Text="{Binding Name}" />
            <Run
                Text=" (" />
            <Run
                Text="{Binding Address}" />
            <Run
                Text=":" />
            <Run
                Text="{Binding Port}" />
            <Run
                Text=")" />
        </TextBlock>
    </DataTemplate>

</ResourceDictionary>