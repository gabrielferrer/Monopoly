                        <ItemsPanelTemplate>
                            <UniformGrid
                                Columns="{Binding PlayerColumns}"
                                Rows="{Binding PlayerRows}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="{Binding PlayerWidth}"
