        x:Key="WestCellTemplate">
        <Border
            Width="{Binding Width}"
            Height="{Binding Height}"
            BorderBrush="Black"
            BorderThickness="{Binding Border}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
